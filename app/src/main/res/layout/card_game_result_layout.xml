<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/dark_translucent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/txt_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Players: X vs O"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score:  8-8 (8 draws)"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2004/05/23 - 14:33"
            android:textSize="14sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/txt_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode: gamemode"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Winner: winner"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 3m 14s"
            android:textSize="14sp"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
